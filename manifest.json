{
  "manifest_version": 2,
  "background": {
     "scripts": ["jquery-3.2.1.min.js"],
     "persistent": false
   },
  "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["jquery-3.2.1.min.js", "popup.js"]
      }
    ],

  "name": "CryptoMine",
  "description": "This extension will shows your balance in different exchanges",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab"
   ]
}
